test_filter_by_tag:
  -
    origins:
      > a 1 2 3 1
      > a 2 3 4 2
      > b 3 4 5 1
      > b 4 5 6 2
    tag: a
    expected:
      > a 1 2 3 1
      > a 2 3 4 2
  -
    origins:
      > a 1 2 3 1
      > a 2 3 4 2
      > b 3 4 5 1
      > b 4 5 6 2
    tag: b
    expected:
      > b 3 4 5 1
      > b 4 5 6 2

test_filter_by_distance:
  -
    origins:
      > a 0 0 0 1
      > a 0 0 1 1
      > a 0 0 2 1
      > a 0 0 3 1
      > a 0 0 4 1
    center: 0 0 2
    min_dist_A: 0.5
    max_dist_A: 1.5
    expected:
      > a 0 0 1 1
      > a 0 0 3 1

test_view_pair:
  -
    atoms_i:
      > C 1 0 0
      > C 0 1 0
      > C 0 0 1
    frame_ia:
      origin: 1 2 3
      rot_vec_rad: 0 0 0
    frame_ib:
      origin: 0 0 0
      rot_vec_rad: 0 0 pi/2
    atoms_a:
      > C  0 -2 -3
      > C -1 -1 -3
      > C -1 -2 -2
    atoms_b:
      > C  0 -1  0
      > C  1  0  0
      > C  0  0  1

